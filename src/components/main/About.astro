---
import type { AboutContent } from '@/types';
import { getAbout } from '@/utils/content-loader';

const { Bio, ...content }: AboutContent = await getAbout();
---

<div class="custom:flex-row flex w-full flex-col-reverse items-center">
  <div class="custom:w-2/3 custom:pt-0 flex w-full flex-col justify-center space-y-12 pt-10">
    <div class="ms:grid-cols-4 grid grid-cols-2 items-center gap-2">
      {
        content.skills.map((skill) => (
          <div class="rounded-full border border-white/10 py-1 text-center text-sm text-accent">{skill}</div>
        ))
      }
    </div>
    <div class="ms:grid-cols-6 grid grid-cols-3 gap-2">
      {
        content.hobbies.map((hobby) => (
          <div class="flex justify-center">
            <img src={hobby.img} alt={hobby.alt} class="size-10 items-center justify-center" />
          </div>
        ))
      }
    </div>
    <div class="text-lg text-secondary"><Bio /></div>
  </div>
  <div class="custom:w-1/3 custom:justify-end flex w-full items-center justify-center">
    <div class="flex h-full items-center overflow-hidden rounded-b-full">
      <img class="image-shadow custom:h-[300px] custom:w-[218px] h-[200px] w-[150px]" src={content.image} alt="about" />
    </div>
  </div>
</div>

<style>
  .image-shadow {
    filter: drop-shadow(-5px 2px 1px #0296be30) contrast(110%);
  }
</style>
