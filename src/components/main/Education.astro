---
import type { EducationContent } from '@/types';
import { getEducation } from '@/utils/content-loader';

interface EducationType {
  icon: string;
  alt: string;
}

const educationTypeMap: Record<string, EducationType> = {
  certification: {
    icon: '/icons/certification.svg',
    alt: 'certification',
  },
  diploma: {
    icon: '/icons/diploma.svg',
    alt: 'diploma',
  },
};

const content: EducationContent[] = await getEducation();
---

<div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
  {
    content.map((education: EducationContent) => {
      return (
        <div class="rounded-2xl border border-white/5 bg-white/5 p-5">
          <div class="flex flex-row items-center pb-1">
            <img
              src={educationTypeMap[education.type].icon}
              class="size-4"
              alt={educationTypeMap[education.type].alt}
            />
            <p class="pl-2 pt-1 text-accent">{education.category}</p>
          </div>
          <div class="pb-1">
            <span class="text-lg font-semibold">{education.title}</span>
          </div>
          <div class="flex flex-row justify-between">
            <span class="text-secondary">{education.institution}</span>
            <span class="text-sm text-secondary">{education.date}</span>
          </div>
        </div>
      );
    })
  }
</div>
