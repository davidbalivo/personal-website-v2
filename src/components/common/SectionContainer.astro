---
interface Props {
  id?: string;
  class?: string;
  title?: string;
}

const { class: className = '', id = null, title } = Astro.props;
---

<section
  id={id}
  data-section={id}
  class={`scroll-m-2 w-full mx-auto container max-w-7xl lm:px-24 sm:px-12 sm:py-12 px-8 py-8 ${className}`}
>
  {title && <h2 class="mb-10 text-2xl font-semibold">{title}</h2>}
  <slot />
</section>
